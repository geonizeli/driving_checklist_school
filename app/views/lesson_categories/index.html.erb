<% if notice.present? %>
  <div class="alert alert-success mt-4" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1>Lesson categories</h1>

<div id="lesson_categories">
  <% @lesson_categories.each do |lesson_category| %>
    <%= render lesson_category %>
    <p>
      <%= link_to "Show this lesson category", lesson_category %>
    </p>
  <% end %>
</div>

<%= link_to "New lesson category", new_lesson_category_path %>
