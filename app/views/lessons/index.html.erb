<%= render partial: 'shared/notice' %>

<div class="d-flex justify-content-between">
  <h1>Lessons</h1>
  <div>
    <%= link_to "New lesson", new_lesson_path, class: 'btn btn-primary' %>
  </div>
</div>

<div id="lessons">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Created at</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @lessons.each_with_index do |lesson, index| %>
        <tr scope="row">
          <td><%= index + 1 %></td>
          <td><%= lesson.name %></td>
          <td><%= link_to lesson.lesson_category.name, lesson.lesson_category %></td>
          <td><%= lesson.created_at %></td>
          <td>
            <%= link_to "Show this lesson", lesson %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

